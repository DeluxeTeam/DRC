    <!-- Apps recientes -->
    <PreferenceScreen android:title="@string/recent_apps">
        <!-- Máx de iconos en apps recomendadas -->
        <GrxSeekBar
            android:title="@string/max_icons_recents"
            grx:systemType="system"
            grx:minValue="1"
            grx:maxValue="10"
            grx:showPopup="true"
            grx:interval="1"
            android:key="dlx_recents_max_recommended"
            android:defaultValue="5"
            grx:broadCast1="dlx_tw_master"
            grx:broadCast1Extra="dlx_tw_recommended" />
        <!-- Tamaño de iconos -->
        <GrxSeekBar
            android:title="@string/icons_size"
            grx:systemType="system"
            grx:minValue="3"
            grx:maxValue="15"
            grx:showPopup="true"
            grx:interval="1"
            android:key="dlx_recents_icon_size"
            android:defaultValue="10"
            grx:broadCast1="dlx_tw_master"
            grx:broadCast1Extra="dlx_tw_kill" />
    </PreferenceScreen>

