            grx:interval="1"
            grx:systemType="system" />
        <GrxSeekBar
            android:title="@string/right_margin"
            android:key="recents_empty_right_padding"
            android:defaultValue="0"
            grx:broadCast1="dlx_recents_update"
            grx:maxValue="3"
            grx:minValue="0"
            grx:interval="1"
            grx:systemType="system" />
        <GrxSeekBar
            android:title="@string/up_margin"
            android:key="recents_empty_up_padding"
            android:defaultValue="0"
            grx:broadCast1="dlx_recents_update"
            grx:maxValue="13"
            grx:minValue="0"
            grx:interval="1"
            grx:systemType="system" />
        <GrxSeekBar
            android:title="@string/down_margin"
            android:key="recents_empty_down_padding"
