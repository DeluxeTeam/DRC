            grx:broadCast1="dlx_recents_update"
            grx:maxValue="13"
            grx:minValue="0"
            grx:interval="1"
            grx:systemType="system" />
    </PreferenceScreen>

    <!-- Texto "Cerrartodo" -->
    <PreferenceScreen android:title="@string/closeall_text">
        <GrxColorPicker
