            android:defaultValue="-0"
            grx:colorPickerStyle="flower"
            android:dependency="dlx_tw_use_custom_color"
            grx:broadCast1="dlx_tw_master"
            grx:broadCast1Extra="dlx_tw_kill"
            />
    </PreferenceScreen>

