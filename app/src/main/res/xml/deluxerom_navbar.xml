    <!-- TamaÃ±o personalizado -->
    <GrxSwitchPreference
        android:title="@string/use_custom_size"
        android:key="is_navbar_height_switch"
        android:defaultValue="false"
        grx:systemType="system" />
    <GrxSeekBar
        android:title="@string/size"
        android:key="is_navigation_bar_height"
        grx:systemType="system"
        android:dependency="is_navbar_height_switch"
        android:defaultValue="130"
        grx:interval="1"
        grx:maxValue="200"
        grx:minValue="0"
        grx:showPopup="true"
        grx:units=" px" />
    <GrxSeekBar
        android:title="@string/landscape_size"
        android:key="is_navigation_bar_width"
        grx:systemType="system"
        android:dependency="is_navbar_height_switch"
        android:defaultValue="130"
        grx:interval="1"
        grx:maxValue="200"
        grx:minValue="0"
        grx:showPopup="true"
        grx:units=" px" />

</PreferenceScreen>