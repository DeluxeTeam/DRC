<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grx="http://schemas.android.com/apk/res-auto">

    <!-- Estilo de menu de reinicio (Stock/DiÃ¡logo) -->
    <GrxSingleSelection
        android:title="@string/reboot_style"
        grx:systemType="system"
        android:key="dlx_power_menu_style"
        android:defaultValue="0"
        grx:optionsArray="@array/reboot_style_entries"
        grx:valuesArray="@array/reboot_style_values"
        grx:commonBcExtra="arg"
        grx:commonBcExtraValue="power_menu" />

    <!--Elementos a mostar / orden -->
    <GrxSelectSortItems
        android:title="@string/elements_show"
        grx:depRule="ENABLE#dlx_power_menu_style#STRING#0"
        grx:systemType="system"
        android:key="dlx_power_menu_container"
        android:defaultValue="power,restart,emergency,grxsettings,"
        grx:separator=","
        grx:commonBcExtra="arg"
        grx:commonBcExtraValue="power_menu"
        grx:optionsArray="@array/agc_reboot_options"
        grx:valuesArray="@array/agc_reboot_values" />

    <GrxCheckBoxPreference
        android:title="@string/use_random_reboot"
        grx:depRule="ENABLE#dlx_power_menu_style#STRING#0"
        grx:systemType="system"
android:key="dlx_power_menu_random"
        
        grx:commonBcExtra="arg"
        grx:commonBcExtraValue="power_menu"
        android:defaultValue="0" />

    <GrxCheckBoxPreference
        android:title="@string/pm_split"
        grx:depRule="ENABLE#dlx_power_menu_style#STRING#0"
        grx:systemType="system"
        android:key="dlx_power_menu_2columns"
        grx:commonBcExtra="arg"
        grx:commonBcExtraValue="power_menu"
        android:defaultValue="0" />

    <!-- Estilo de iconos -->
    <GrxSingleSelection
        android:title="@string/icons_style"
        grx:depRule="ENABLE#dlx_power_menu_style#STRING#0"
        grx:systemType="system"
        android:key="dlx_reboot_style"
        android:defaultValue="0"
        grx:optionsArray="@array/reboot_icon_entries"
        grx:iconsArray="@array/drawables_icono_reinicio"
        grx:valuesArray="@array/reboot_icon_values"
        grx:commonBcExtra="arg"
        grx:commonBcExtraValue="power_menu" />

    <GrxPreferenceCategory grx:hiddenCategory="true" grx:depRule="ENABLE#dlx_power_menu_style#STRING#0">

        <PreferenceScreen android:title="@string/power_text">

            <GrxPerItemColor
                android:title="@string/power_menu_text_colors"
                grx:systemType="system"
                android:key="dlx_power_menu_colors"
                grx:valuesArray="@array/powermenu_color_values"
                grx:optionsArray="@array/powermenu_color_entries"
                android:defaultValue="main/-3947581##desc/-3947581##status/-3947581##mainwhite/-9079435##descwhite/-9079435##statuswhite/-9079435##"
                grx:separator="##"
                grx:colorPickerStyle="flower"
                grx:depRule="ENABLE#dlx_power_menu_style#STRING#0"
                grx:showAlphaSlider="true"
                grx:showAutoButton="true"
                grx:commonBcExtra="arg"
                grx:commonBcExtraValue="power_menu" />

            <GrxSeekBar
                android:title="@string/power_size"
                grx:systemType="system"
                android:key="dlx_power_text_size"
                grx:depRule="ENABLE#dlx_power_menu_style#STRING#0"
                android:defaultValue="15"
                grx:maxValue="30"
                grx:minValue="1"
                grx:commonBcExtra="arg"
                grx:commonBcExtraValue="power_menu"
                />

            <GrxSeekBar
                android:title="@string/power_sub_size"
                grx:systemType="system"
                android:key="dlx_power_subtext_size"
                grx:depRule="ENABLE#dlx_power_menu_style#STRING#0"
                android:defaultValue="15"
                grx:maxValue="30"
                grx:minValue="1"
                grx:commonBcExtra="arg"
                grx:commonBcExtraValue="power_menu"
                />

            <GrxSingleSelection
                android:title="@string/font"
                grx:systemType="system"
                android:key="dlx_power_typeface"
                grx:depRule="ENABLE#dlx_power_menu_style#STRING#0"
                android:defaultValue="0"
                grx:commonBcExtra="arg"
                grx:commonBcExtraValue="power_menu"
                grx:iconsArray="@array/agc_estilo_fuente_drawables"
                grx:optionsArray="@array/agc_estilo_fuente_entries"
                grx:valuesArray="@array/agc_estilo_fuente_values"
                />

            <GrxSingleSelection
                android:title="@string/subtxt_font"
                grx:systemType="system"
                android:key="dlx_power_sub_typeface"
                grx:depRule="ENABLE#dlx_power_menu_style#STRING#0"
                android:defaultValue="0"
                grx:commonBcExtra="arg"
                grx:commonBcExtraValue="power_menu"
                grx:iconsArray="@array/agc_estilo_fuente_drawables"
                grx:optionsArray="@array/agc_estilo_fuente_entries"
                grx:valuesArray="@array/agc_estilo_fuente_values"
                />

        </PreferenceScreen>

    </GrxPreferenceCategory>

    <!-- Fondo personalizado -->
    <PreferenceScreen android:title="@string/custombg" >

        <GrxSwitchPreference
            android:title="@string/visibility"
            grx:systemType="system"
            android:key="dlx_power_bg_enabled"
            android:defaultValue="false"
            />
        <GrxSingleSelection
            android:title="@string/type"
            grx:systemType="system"
            android:key="dlx_power_bg_type"
            android:defaultValue="0"
            android:dependency="dlx_power_bg_enabled"
            grx:optionsArray="@array/custom_bg_type_entries"
            grx:valuesArray="@array/custom_bg_type_values" />
        <GrxPickImage
            android:title="@string/select_image"
            grx:systemType="system"
            android:key="dlx_power_bg_uri"
            android:dependency="dlx_power_bg_enabled"
            grx:depRule="ENABLE#dlx_power_bg_type#STRING#0"
            />
        <GrxSeekBar
            android:title="@string/opacity"
            grx:systemType="system"
            android:key="dlx_power_bg_alpha"
            android:defaultValue="255"
            android:dependency="dlx_power_bg_enabled"
            grx:maxValue="255"
            grx:minValue="0"
            />
        <GrxColorPicker
            android:title="@string/color"
            grx:systemType="system"
            android:key="dlx_power_bg_indv_color"
            android:defaultValue="-1"
            android:dependency="dlx_power_bg_enabled"
            grx:depRule="ENABLE#dlx_power_bg_type#STRING#1"
            grx:colorPickerStyle="flower"
            grx:iconTint="?complementary_color3"
            grx:showAlphaSlider="true"
            grx:showAutoButton="true"
            grx:saveValueOnFly="true"
            />
        <GrxPerItemColor
            android:title="@string/gradient6"
            grx:systemType="system"
            android:key="dlx_power_bg_color_array"
            grx:valuesArray="@array/custombg_color_values"
            grx:optionsArray="@array/custombg_color_entries"
            android:defaultValue="color1/-1##color2/-1##color3/-1##color4/-1##color5/-1##color6/-1##"
            grx:separator="##"
            grx:colorPickerStyle="flower"
            android:dependency="dlx_power_bg_enabled"
            grx:depRule="ENABLE#dlx_power_bg_type#STRING#2"
            grx:showAlphaSlider="true"
            grx:showAutoButton="true" />
        <GrxSingleSelection
            android:title="@string/custombg_orientation"
            grx:systemType="system"
            android:key="dlx_power_bg_orientation"
            android:defaultValue="0"
            android:dependency="dlx_power_bg_enabled"
            grx:depRule="ENABLE#dlx_power_bg_type#STRING#2"
            grx:optionsArray="@array/gradient_entries"
            grx:valuesArray="@array/gradient_values" />
    </PreferenceScreen>

    <!-- Matrix -->
    <PreferenceScreen android:title="@string/matrix">
        <GrxSwitchPreference
            android:title="@string/visibility"
            android:key="dlx_power_matrix_visibility"
            android:defaultValue="false"
            grx:systemType="system" />
        <GrxCheckBoxPreference
            grx:depRule="DISABLE#dlx_power_matrix_random#BOOLEAN#true"
            android:dependency="dlx_power_matrix_visibility"
            android:title="@string/use_gradient"
            android:key="dlx_power_matrix_gradient"
            android:defaultValue="false"
            grx:systemType="system" />
        <GrxCheckBoxPreference
            android:dependency="dlx_power_matrix_visibility"
            android:title="@string/invert"
            android:key="dlx_power_matrix_invert"
            android:defaultValue="false"
            grx:systemType="system" />
        <GrxCheckBoxPreference
            grx:depRule="DISABLE#dlx_power_matrix_gradient#BOOLEAN#true"
            android:dependency="dlx_power_matrix_visibility"
            android:title="@string/random_color"
            android:key="dlx_power_matrix_random"
            android:defaultValue="false"
            grx:systemType="system" />
        <GrxColorPicker
            android:dependency="dlx_power_matrix_visibility"
            android:title="@string/bg_color"
            android:key="dlx_power_matrix_bg_color"
            android:defaultValue="0xFF000000"
            grx:showAlphaSlider="true"
            grx:showAutoButton="true"
            grx:systemType="system" />
        <GrxColorPicker
            grx:depRule="DISABLE#dlx_power_matrix_random#BOOLEAN#true"
            android:dependency="dlx_power_matrix_visibility"
            android:title="@string/primary_text_color"
            android:key="dlx_power_matrix_txt_color"
            android:defaultValue="0xFF00FF00"
            grx:showAlphaSlider="true"
            grx:showAutoButton="true"
            grx:systemType="system" />
        <GrxColorPicker
            grx:depRule="DISABLE#dlx_power_matrix_random#BOOLEAN#true"
            android:dependency="dlx_power_matrix_gradient"
            android:title="@string/second_txt_color_gradient"
            android:key="dlx_power_matrix_txt_second_color"
            android:defaultValue="0xFFFFFF00"
            grx:showAlphaSlider="true"
            grx:showAutoButton="true"
            grx:systemType="system" />
        <GrxSeekBar
            android:dependency="dlx_power_matrix_visibility"
            android:title="@string/size"
            android:key="dlx_power_matrix_txt_size"
            android:defaultValue="15"
            grx:maxValue="50"
            grx:minValue="3"
            grx:interval="1"
            grx:showPopup="true"
            grx:systemType="system" />
        <GrxSeekBar
            android:dependency="dlx_power_matrix_visibility"
            android:title="@string/opacity"
            android:key="dlx_power_matrix_txt_alpha"
            android:defaultValue="255"
            grx:maxValue="255"
            grx:minValue="1"
            grx:interval="1"
            grx:showPopup="true"
            grx:systemType="system" />
    </PreferenceScreen>


